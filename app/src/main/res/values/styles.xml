<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- APP STYLE -->
        <item name="android:windowBackground">@color/main_background</item>
        <!-- TOOLBAR STYLE -->
        <item name="colorPrimary">@color/actionbar_background</item>
        <item name="colorPrimaryDark">@color/actionbardark_background</item>
        <item name="android:textColorPrimary">@color/actionbar_text</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>



    </style>

    <style name="Popup" parent="@style/Widget.AppCompat.Light.ListView.DropDown">

        <item name="android:background">@color/actionbar_background</item>

    </style>
    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">@color/actionbar_background</item>
    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">@color/actionbar_background</item>
    </style>
</resources>
